        {
            "route": "/login",
            "rewrite": "/.auth/login/adb2c"
        }
    ],
    "auth": {
        "identityProviders": {
            "customOpenIdConnectProviders": {
                "adb2c": {
                    "registration": {
                        "clientIdSettingName": "ADB2C_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "ADB2C_CLIENT_SECRET"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://seanwoodwardwebb2c.b2clogin.com/seanwoodwardwebb2c.onmicrosoft.com/B2C_1_signupsignin1/v2.0/.well-known/openid-configuration"
                        }
                    },
                    "login": {
                        "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
                        "scopes": [],
                        "loginParameterNames": []                                                
                    }
                }
            }
        }
    }
}